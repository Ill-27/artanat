{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node" 
    },
    {
      "src": "index.html",
      "use": "@vercel/static"  
    }
  ],
  "routes": [
    {
      "src": "/bg1.html",
      "dest": "/404",
      "headers": {
        "Content-Security-Policy": "frame-ancestors 'none';",
        "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0"
      }
    },
    {
      "src": "/bg2.html",
      "dest": "/404",
      "headers": {
        "Content-Security-Policy": "frame-ancestors 'none';",
        "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0"
      }
    },
    {
      "src": "/api/bg1",
      "headers": {
        "Content-Security-Policy": "frame-ancestors https://arterrii.ru https://arterrii.vercel.app;",
        "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0",
        "X-Content-Type-Options": "nosniff",
        "X-DNS-Prefetch-Control": "off",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Permissions-Policy": "fullscreen=(self), geolocation=(), microphone=(), camera=(), display-capture=()",
        "Cross-Origin-Embedder-Policy": "require-corp",
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Resource-Policy": "same-origin",
        "Access-Control-Allow-Origin": "https://arterrii.vercel.app https://arterrii.ru",
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Allow-Headers": "Content-Type, Referer",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/api/bg2",
      "headers": {
        "Content-Security-Policy": "frame-ancestors https://arterrii.ru https://arterrii.vercel.app;",
        "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0",
        "X-Content-Type-Options": "nosniff",
        "X-DNS-Prefetch-Control": "off",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Permissions-Policy": "fullscreen=(self), geolocation=(), microphone=(), camera=(), display-capture=()",
        "Cross-Origin-Embedder-Policy": "require-corp",
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Resource-Policy": "same-origin",
        "Access-Control-Allow-Origin": "https://arterrii.vercel.app https://arterrii.ru",
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Allow-Headers": "Content-Type, Referer",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    {
      "src": "/(.*)",
      "headers": {
        "Content-Security-Policy": "frame-ancestors 'none'; default-src 'self'; script-src 'self' 'nonce-3a7f' https://cdn.jsdelivr.net; style-src 'self' 'nonce-3a7f' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:; connect-src 'self' https://cdn.jsdelivr.net https://fonts.googleapis.com; object-src 'none'; base-uri 'self';",
        "Cache-Control": "no-store, no-cache, must-revalidate, max-age=0",
        "X-Content-Type-Options": "nosniff",
        "X-DNS-Prefetch-Control": "off",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Permissions-Policy": "fullscreen=(self), geolocation=(), microphone=(), camera=(), display-capture=()",
        "Cross-Origin-Embedder-Policy": "require-corp",
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Resource-Policy": "same-origin",
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload",
        "Access-Control-Allow-Origin": "https://arterrii.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Access-Control-Allow-Credentials": "true",
        "X-XSS-Protection": "1; mode=block"
      }
    }
  ]
}
